<table class="table table-striped">
  <thead>
    <tr>
      <th width="80">リストに追加</th>
      <th>ユーザ名</th>
    </tr>
  </thead>
  <tbody>
    <%= form_tag :action => "create_list" do %>
      <% @follow_users.each do |user| %>
      <tr>
        <td width="80"><%= check_box_tag "fids[]", user.screen_name %></td>
        <td><%= user.screen_name %></td>
      </tr>
      <% end %>
  </tbody>
</table>
<%= text_field_tag "list_name", "list_name" %>
<%= submit_tag "登録", :class => "btn primary-btn" %>
<% end %>